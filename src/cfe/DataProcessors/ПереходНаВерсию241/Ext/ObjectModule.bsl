			НСтр("ru = '<%1: Объект или Элементы.ИмяТаблицы>'"),
			ОсталосьСделать());
	Иначе
		Источник = ПараметрОбъектИлиТаблицаФормы;
	КонецЕсли;
	Результат = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(Результат, Источник);
	Возврат Результат;
