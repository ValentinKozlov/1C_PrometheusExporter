			// Обновление текста запроса.
			ЭтотОбъект.ТекстЗапроса.УстановитьТекст(СтрЗапросы.Текст);
			АнализЗапросаПроведен = АнализЗапросаПроведен(СтрЗапросы.АдресХранилищаПланаЗапроса, ПланЗапросаАктуален);
