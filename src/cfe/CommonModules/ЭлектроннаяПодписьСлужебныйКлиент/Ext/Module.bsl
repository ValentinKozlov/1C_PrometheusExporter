		КонецЕсли;
		
	Иначе
		ЗавершитьОперациюСОшибкой(
			Контекст,
			НСтр("ru = 'Не установлен тип подписи компоненты ExtraCryptoAPI.'"));
	КонецЕсли;
	
КонецПроцедуры

